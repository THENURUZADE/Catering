@using Catering.Web.Models;
@model CookModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chiefs</title>

    <link rel="stylesheet" type="text/css" media="screen" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/layout.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/css/commonDesign.css">
    <link rel="stylesheet" href="~/css/warninganimation.css">

    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

    @*<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>*@

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <form asp-controller="Cook" asp-action="SaveCook" method="post" class="form-group">
        <div class="form-group">
            <label asp-for="Name" for="name" class="mr-sm-2">Name:</label>
            <input asp-for="Name" class="form-control mb-2 mr-sm-2" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label for="email" class="mr-sm-2">Category:</label>
            <select asp-for="CookCategory.Id" asp-items="Model.Categories" class="form-control mb-2 mr-sm-2"></select>
        </div>
        <div class="form-group">
            <label asp-for="PortionWeight" for="email" class="mr-sm-2">Portion weight:</label>
            <input asp-for="PortionWeight" class="form-control mb-2 mr-sm-2" />
            <span class="text-danger" asp-validation-for="PortionWeight"></span>
        </div>
        <div class="form-group">
            <label asp-for="PortionPrice" for="email" class="mr-sm-2">Portion price:</label>
            <input asp-for="PortionPrice" class="form-control mb-2 mr-sm-2" />
            <span class="text-danger" asp-validation-for="PortionPrice"></span>
        </div>
        <div class="form-group">
            <label asp-for="Note" for="discount" class="mr-sm-2">Note:</label>
            <input asp-for="Note" class="form-control mb-2 mr-sm-2" />
            <span class="text-danger" asp-validation-for="Note"></span>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary bgupdate">Add</button>
        </div>
    </form>
</body>
</html>